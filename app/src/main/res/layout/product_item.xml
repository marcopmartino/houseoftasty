<?xml version="1.0" encoding="UTF-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemFrame"
        style="@style/groupStylered_300_38cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:padding="@dimen/_8pxh"
        app:layout_constraintVertical_bias="0.039">

        <TextView
            android:id="@+id/nomeData"
            style="@style/txtBalooBhairegular20_1"
            android:layout_width="126dp"
            android:layout_height="26dp"
            android:layout_weight="0.61"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/itemFrame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@+id/itemFrame"
            app:layout_constraintTop_toTopOf="@+id/itemFrame"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/quantitaLabel"
            android:layout_width="62dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:text="@string/quantita"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeData"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/quantitaData"
            style="@style/txtBaloo2regular16"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:layout_weight="148"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/quantitaLabel"
            app:layout_constraintStart_toEndOf="@+id/quantitaLabel"
            app:layout_constraintTop_toTopOf="@+id/quantitaLabel"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/scadenzaLabel"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="-1dp"
            android:layout_weight="148"
            android:text="@string/scadenza"
            app:layout_constraintBottom_toBottomOf="@+id/quantitaData"
            app:layout_constraintStart_toEndOf="@+id/quantitaData"
            app:layout_constraintTop_toTopOf="@+id/quantitaData"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/scadenzaData"
            style="@style/txtBaloo2regular16"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="148"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/scadenzaLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/scadenzaLabel"
            app:layout_constraintTop_toTopOf="@+id/scadenzaLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
